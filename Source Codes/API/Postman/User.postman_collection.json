		{
			"name": "Filter Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1) Status code\r",
							"pm.test(\"Status is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"// Prepare data\r",
							"const json = pm.response.json();\r",
							"const users = json.users;\r",
							"\r",
							"// Read the filter key & value directly from the request URL (AUTOMATED)\r",
							"const filterKey = pm.request.url.query.get(\"key\");       \r",
							"const filterValue = pm.request.url.query.get(\"value\");   \r",
							"\r",
							"\r",
							"pm.test(\"Users array exists\", function () {\r",
							"    pm.expect(users).to.be.an(\"array\");\r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"User objects contain required fields\", function () {\r",
							"    if (users.length > 0) {\r",
							"        pm.expect(users[0]).to.have.property(\"id\");\r",
							"        pm.expect(users[0]).to.have.property(\"firstName\");\r",
							"        pm.expect(users[0]).to.have.property(\"lastName\");\r",
							"        pm.expect(users[0]).to.have.property(\"age\");\r",
							"    } else {\r",
							"        pm.expect(json.total).to.eql(0);   \r",
							"    }\r",
							"});\r",
							"\r",
							"// 5) Every user matches the filter (MAIN TEST)\r",
							"pm.test(\"All results match the filter\", function () {\r",
							"    if (users.length > 0) {\r",
							"        users.forEach(user => {\r",
							"            const value = String(user[filterKey]).toLowerCase();\r",
							"            pm.expect(value).to.include(filterValue.toLowerCase());\r",
							"        });\r",
							"    }\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
